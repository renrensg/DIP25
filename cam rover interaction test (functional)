#include <SoftwareSerial.h>
#include <Arduino.h>

SoftwareSerial HC12(10, 11); //RXTX
void setup() {
  Serial.begin(9600);
  HC12.begin(9600);
  Serial.println("Listening for HC-12 messages...");
}

void loop() {
  if (HC12.available()) {
    String msg = HC12.readStringUntil('\n');
  
    Serial.print("ðŸ“© Received: ");
    Serial.println(msg);
  }
}
